CTF_DBHOST="{{ ctf_gameserver_db_host }}"
CTF_DBNAME="{{ ctf_gameserver_db_name }}"
CTF_DBUSER="{{ ctf_gameserver_db_user_checker }}"
CTF_DBPASSWORD="{{ ctf_gameserver_db_pass_checker }}"

CTF_CACHEDBHOST="{{ ctf_gameserver_db_host }}"
CTF_CACHEDBNAME="{{ ctf_gameserver_statedb_name }}"
CTF_CACHEDBUSER="{{ ctf_gameserver_statedb_user }}"
CTF_CACHEDBPASSWORD="{{ ctf_gameserver_statedb_pass }}"

CTF_SECRET="{{ ctf_gameserver_flag_secret }}"
CTF_IPPATTERN="{{ ctf_gameserver_checker_ippattern }}"

CTF_MAXTASKS="{{ ctf_gameserver_checker_maxtasks }}"
CTF_MINSTART="{{ ctf_gameserver_checker_minstart }}"
