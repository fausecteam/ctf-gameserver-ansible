# {{ ansible_managed }}

CTF_DBHOST="{{ ctf_gameserver_db_host }}"
CTF_DBNAME="{{ ctf_gameserver_db_name }}"
CTF_DBUSER="{{ ctf_gameserver_db_user_checker }}"
CTF_DBPASSWORD="{{ ctf_gameserver_db_pass_checker }}"

CTF_SUDOUSER="ctf-checkerrunner"
CTF_FLAGSECRET="{{ ctf_gameserver_flag_secret }}"
CTF_IPPATTERN="{{ ctf_gameserver_checker_ippattern }}"

CTF_LOGLEVEL="{{ ctf_gameserver_checker_loglevel }}"
{% if ctf_gameserver_checker_journald %}
CTF_JOURNALD=true
{% endif %}
{% if ctf_gameserver_checker_gelf_server != '' %}
CTF_GELF_SERVER="{{ ctf_gameserver_checker_gelf_server }}"
{% endif %}
